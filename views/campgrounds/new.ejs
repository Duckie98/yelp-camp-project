<!-- CREATE NEW CAMPGROUND ROUTE -->
<% include ../partials/header %>

<div class="container">
    <!--<div class="row">-->
        <h1 style="text-align:center">Creat a new campground</h1>
        
            <form action="/campgrounds" style="width:30%; margin: 0px auto;" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Add name here" required/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01" required/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Add image url here" required/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Add description url here"/>
                </div>
                <div class="form-group" style="text-align: center">
                    <input class="form-control btn btn-primary" type="submit"/>
                </div>
                <a href="/campgrounds">Go back</a>
            </form>
        
        
    <!--</div>-->
</div>
<% include ../partials/footer %>