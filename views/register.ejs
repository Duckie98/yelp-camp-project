<% include partials/header %>

<div class="container">
    <h1 style="text-align:center">Sign Up</h1>
    
    <form action="/register" style="width:30%; margin: 0px auto;" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder="Username"/>
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Password"/>
        </div>
        <div class="form-group" style="text-align: center">
            <input class="form-control btn btn-primary" type="submit" value="Sign Up"/>
        </div>
        <a href="/campgrounds" class="btn btn-xs btn-default">Go back</a>
        
        <a href="/login" class="btn btn-xs btn-info">Login</a>
    </form>
</div>

<% include partials/footer %>